# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                 controllers.Index.view

# Entry
GET     /entry            controllers.Entry.pull
POST    /entry            controllers.Entry.push

# Filer
GET     /filer            controllers.Filer.view(id)

# Lists
GET     /lists            controllers.Lists.view

# Admin (Private)
GET     /admin            controllers.Admin.view

# Posts (Private)
GET     /admin/:id        controllers.Posts.pull(id: Long)
POST    /admin/:id        controllers.Posts.push(id: Long)

# Board
GET     /board            controllers.Board.view

# FAQ
GET     /quest            controllers.Quest.view

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file     controllers.Assets.versioned(path="/public", file: Asset)
