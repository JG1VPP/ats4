# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   controllers.Index.view

# Entry
GET     /entry              controllers.Entry.form
POST    /entry              controllers.Entry.post

# Lists
GET     /lists              controllers.Lists.view

# Admin (Private)
GET     /admin              controllers.Admin.view
GET     /admin/edit         controllers.Admin.edit(call: Option[String])
GET     /admin/file         controllers.Admin.file(call: Option[String])
GET     /admin/proof/:call  controllers.Proof.view(call: String)
DELETE  /admin/proof/:call  controllers.Proof.elim(call: String)

# Board
GET     /board              controllers.Board.view

# FAQ
GET     /guide              controllers.Guide.view

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       controllers.Assets.versioned(path="/public", file: Asset)
