# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                 controllers.Index.view

# Entry
GET     /entry            controllers.Entry.form
POST    /entry            controllers.Entry.post

# Lists
GET     /lists            controllers.Lists.view

# Admin (Private)
GET     /admin            controllers.Admin.view
GET     /admin/edit       controllers.Admin.edit(id: Option[Long])
GET     /admin/save       controllers.Admin.save(id: Option[Long])
GET     /admin/pages/:id  controllers.Proof.query(id: Long)
DELETE  /admin/pages/:id  controllers.Proof.purge(id: Long)

# Board
GET     /board            controllers.Board.view

# FAQ
GET     /guide            controllers.Guide.view

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file     controllers.Assets.versioned(path="/public", file: Asset)
