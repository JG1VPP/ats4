# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                 controllers.Index.view

# Entry
GET     /entry            controllers.Entry.form
POST    /entry            controllers.Entry.post

# Lists
GET     /lists            controllers.Lists.view

# Admin (Private)
GET     /admin/           controllers.Admin.root
GET     /admin/form/:id   controllers.Admin.form(id: Long)
GET     /admin/logs/:id   controllers.Admin.logs(id: Long)
GET     /admin/sums/:id   controllers.Admin.sums(id: Long)
POST    /admin/elim/:id   controllers.Admin.elim(id: Long)

# Board
GET     /board            controllers.Board.view

# FAQ
GET     /guide            controllers.Guide.view

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file     controllers.Assets.versioned(path="/public", file: Asset)
